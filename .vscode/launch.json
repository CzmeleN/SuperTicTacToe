{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/SuperTicTacToe", // Ścieżka do pliku wykonywalnego
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Upewnij się, że zadanie build jest uruchamiane przed debugowaniem
            "miDebuggerPath": "/usr/bin/gdb", // Ścieżka do gdb
            "logging": {
                "engineLogging": true
            }
        }
    ]
}
